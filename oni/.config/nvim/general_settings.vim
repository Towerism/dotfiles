set incsearch
set number
set noswapfile
set smartcase
set clipboard=unnamedplus

set splitright
set splitbelow
set backupcopy=yes

" Turn off statusbar, because it is externalized
set noshowmode
set noruler
set laststatus=0
set noshowcmd

" Enable GUI mouse behavior
set mouse=a

" Default tab settings
set tabstop=8
set shiftwidth=4
set softtabstop=4
set expandtab
highlight clear SignColumn
