# Setup clients for workspaces
assign [class="kitty"] $ws1
assign [class="oni"] $ws2
assign [class="code"] $ws2
assign [instance="chromium"] $ws3
assign [instance="localhost__iris"] $ws4
assign [class="Franz"] $ws5

# Setup gaps
gaps inner 17 
gaps outer 25
for_window [class="^.*"] border pixel 0

# Setup X composition
exec compton -czf -i0.9

# Setup wallpaper
exec --no-startup-id exec ~/.scripts/restore-theme

# Start network manager client tray
# exec --no-startup-id nm-applet

# Start base programs
exec --no-startup-id kitty
exec --no-startup-id kitty --class code nvim
exec --no-startup-id chromium
exec --no-startup-id franz

# Setup polybar
exec_always --no-startup-id ~/.config/polybar/launch.sh

# Preferences
focus_follows_mouse no

bindsym $mod+m exec --no-startup-id chromium --app=http://localhost:6680/iris

# editor
bindsym $mod+c exec kitty --class code nvim

# lock the screen
bindsym $mod+Escape exec ~/.scripts/lock

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec ponymix increase 5 && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec ponymix decrease 5 && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute exec ponymix toggle && pkill -RTMIN+10 i3blocks

# Media player controls
bindsym $mod+Down exec mpc toggle
bindsym $mod+Right exec mpc next
bindsym $mod+Left exec mpc prev

# Alternate media player controls
bindsym XF86AudioPlay exec mpc toggle
bindsym XF86AudioNext exec mpc next
bindsym XF86AudioPrev exec mpc prev

# Backlight controls
bindsym $mod+F5 exec xbacklight -dec 10
bindsym $mod+F6 exec xbacklight -inc 10

# Screenshot
set $screenshot_dir "/home/mfracker/screenshots/"
set $screenshot_file "$(date +%Y-%m-%d:%H:%M:%S).png"
bindsym --release $mod+z exec scrot -u $screenshot_dir/$screenshot_file

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# suspend
bindsym $mod+Shift+s exec --no-startup-id systemctl suspend

# start a terminal
bindsym $mod+Return exec kitty
# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec rofi -show run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# toggle workspace on monitor
bindsym $mod+x move workspace to output right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+Shift+v split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
